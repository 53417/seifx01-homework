<div class="card mb-3">
    <img src=<%= @item['book_img'].to_s %> class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title"><%= @item['book_name'] %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Author: <%= @item['book_author'].to_s %></h6>
        <p class="card-text"><%= @item['book_description'].to_s %></p>

				<form method="post" action="/books/<%= @item['id'].to_s %>/edit" class="card card-body">
				
					<div class="form-group row">
						<label for="book_name" class="col-sm-2 col-form-label">Book name</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="book_name" name="book_name"
									value="<%= @item['book_name'] %>">
						</div>
					</div>
                    <div class="form-group row">
						<label for="book_author" class="col-sm-2 col-form-label">Author</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="book_author" name="book_author"
								value="<%= @item['book_author'] %>">
						</div>
					</div>
					<div class="form-group row">
						<label for="book_img" class="col-sm-2 col-form-label">Image</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="book_img" name="book_img"
								value="<%= @item['book_img'] %>">
						</div>
					</div>
					<div class="form-group row">
						<label for="book_description" class="col-sm-2 col-form-label">Description</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="book_description" name="book_description"
								value="<%= @item['book_description'] %>">
						</div>
					</div>
					<div class="form-group row">
						<label for="book_rating" class="col-sm-2 col-form-label">Rating</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="book_rating" name="book_rating"
								value="<%= @item['book_rating'] %>">
						</div>
					</div>
					<div class="form-group row text-right"">
						<div class="col-12">
							<button type="submit" class="btn btn-primary mb-2" style="float: right">Save</button>
						</div>
					</div>

				</form>

        <form method="post" action="/books/<%= @item['id'].to_s %>/delete">
            <button type="submit" class="btn btn-danger">Delete book</button>
        </form>

        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
</div>